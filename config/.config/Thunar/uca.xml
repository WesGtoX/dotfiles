<?xml version="1.0" encoding="UTF-8"?>
<actions>
<action>
	<icon>utilities-terminal</icon>
	<name>Open terminal here</name>
	<unique-id>1548520020751556-1</unique-id>
	<command>exo-open --working-directory %f --launch TerminalEmulator</command>
	<description>Open terminal in current directory</description>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
</action>
<action>
	<icon>package-x-generic</icon>
	<name>Extract here (zip)</name>
	<unique-id>1549075290325825-1</unique-id>
	<command>unzip %f</command>
	<description>Extract the zip in the current directory</description>
	<patterns>*.zip</patterns>
	<startup-notify/>
	<other-files/>
</action>
<action>
	<icon>package-x-generic</icon>
	<name>Extract here (bzip2)</name>
	<unique-id>1612408144168878-2</unique-id>
	<command>tar xjf %n</command>
	<description>Extract the bzip2 in the current directory</description>
	<patterns>*.tar.bz2;*.tbz2</patterns>
	<startup-notify/>
	<other-files/>
</action>
<action>
	<icon>package-x-generic</icon>
	<name>Create tar.gz from folder</name>
	<unique-id>1612408204842803-3</unique-id>
	<command>tar czvf %n.tar.gz %n</command>
	<description>Create tar.gz from the selected folder </description>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
</action>
<action>
	<icon>org.xfce.thunar</icon>
	<name>Open Thunar as root here</name>
	<unique-id>1612408283500705-4</unique-id>
	<command>gksu thunar %f</command>
	<description>Open Thunar as root in the current directory</description>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
</action>
<action>
	<icon>drive-harddisk</icon>
	<name>Disk Usage</name>
	<unique-id>1612407573578660-1</unique-id>
	<command>baobab %d</command>
	<description>View disk usage of the current directory</description>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
</actions>
