{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "editor.fontSize": 12,
  "editor.tabSize": 4,
  // "editor.fontFamily": "DejaVu Sans Mono, Fira Code",
  "editor.fontFamily": "DejaVu Sans Mono, Fira Sans, feather, Hack Nerd Font, Weather Icons, \"Font Awesome 5 Brands\", \"Font Awesome 5 Free Solid\"",
  "editor.fontLigatures": false,
  "editor.minimap.enabled": true,
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": false,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.pyc": {"when": "$(basename).py"},
    "**/__pycache__": true,
    "node_modules": true
  },

  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  "liveServer.settings.donotShowInfoMsg": true,
  // "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.CustomBrowser": "google-chrome-stable",

  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  "breadcrumbs.enabled": true,
  // "sync.gist": "a69c06c84557f5fbc777ada4afe7d62b",

  "python.linting.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "never",

  // MARKDOWN ALL IN ONE
  "markdown.extension.toc.updateOnSave": false,
  "markdown.extension.toc.levels": "2..6",
  "diffEditor.ignoreTrimWhitespace": false,

  //TERMINAL CONFIGURATIONS
  "terminal.integrated.cursorStyle": "line",
  // "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
  // "terminal.external.windowsExec": "C:\\Windows\\System32\\wsl.exe",

  //GIT Bash Configuration
  // "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  //ArchWSL in Windows 10 Configuration
  // "terminal.integrated.shell.windows": "C:\\Program Files\\WindowsApps\\yuk7.archwsl_19.7.2.0_x64__35zwpb4sx6e50\\Arch.exe",
  // need to set `ArchLinux` as default 'cmd> `wls -s ArchLinux`'
  // "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",

  // "terminal.integrated.shell.linux": "/bin/bash",
}
