{
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  "editor.fontSize": 12,
  "editor.lineHeight": 18,
  "editor.tabSize": 4,
  // "editor.fontFamily": "DejaVu Sans Mono, Fira Code",
  "editor.fontFamily": "DejaVu Sans Mono, Fira Sans, feather, Hack Nerd Font, Weather Icons, \"Font Awesome 5 Brands\", \"Font Awesome 5 Free Solid\"",
  "editor.fontLigatures": false,
  "editor.minimap.enabled": true,
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": false,

  // Python
  "python.showStartPage": false,
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.testing.unittestEnabled": true,
  "[python]": {
    "editor.formatOnSave": false
  },
    
  // JavaScript
  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.autoImports": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },

  // TypeScript
  "typescript.suggest.autoImports": true,
  "typescript.tsserver.log": "verbose",
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },

  // Json
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  
  "files.associations": {
    "*.toml": "ini",
    "*.lock": "ini",
    ".sequelizerc": "javascript",
    ".stylelintrc": "json",
    ".prettierrc": "json",
    "*.tsx": "typescriptreact",
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.pyc": {"when": "$(basename).py"},
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "node_modules": true
  },

  "window.zoomLevel": 0,
  
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,

  "liveServer.settings.donotShowInfoMsg": true,
  // "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.CustomBrowser": "google-chrome-stable",

  "emmet.syntaxProfiles": { "javascript": "jsx" },
  "emmet.includeLanguages": { "javascript": "javascriptreact" },

  "breadcrumbs.enabled": true,
  // "sync.gist": "a69c06c84557f5fbc777ada4afe7d62b",

  "diffEditor.ignoreTrimWhitespace": false,

  // TERMINAL CONFIGURATIONS
  "terminal.integrated.cursorStyle": "line",
  // "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
  // "terminal.external.windowsExec": "C:\\Windows\\System32\\wsl.exe",

  // GIT Bash Configuration
  // "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

  // ArchWSL in Windows 10 Configuration
  // "terminal.integrated.shell.windows": "C:\\Program Files\\WindowsApps\\yuk7.archwsl_19.7.2.0_x64__35zwpb4sx6e50\\Arch.exe",
  // need to set `ArchLinux` as default 'cmd> `wls -s ArchLinux`'
  // "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",

  // "terminal.integrated.shell.linux": "/bin/bash",

  // MARKDOWN ALL IN ONE
  "markdown.extension.toc.updateOnSave": false,
  "markdown.extension.toc.levels": "2..6",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },

  // Dart
  "dart.debugExternalLibraries": true,
  "dart.debugSdkLibraries": true,

  // Material Icon Theme
  "material-icon-theme.activeIconPack": "angular",
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "domain": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe",
    "providers": "include",
    "subscribers": "messages",
    "useCases": "controller",
    "kafka": "scripts",
    "mappers": "meta",
    "_shared": "shared",
    "eslint-config": "tools",
    "kube": "kubernetes"
  },
  
  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d",
    "*.webpack.js": "webpack"
  },
}
